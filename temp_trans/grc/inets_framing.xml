<?xml version="1.0"?>
<block>
  <name>framing</name>
  <key>inets_framing</key>
  <category>inets</category>
  <import>import inets</import>
  <make>inets.framing($preamble, $padding, $bps)</make>
  <!-- Make one 'param' node for every Parameter you want settable from the GUI.
       Sub-nodes:
       * name
       * key (makes the value accessible as $keyname, e.g. in the make node)
       * type -->
  <param>
    <name>preamble</name>
    <key>preamble</key>
    <type>int_vector</type>
  </param>
  <param>
    <name>Padding</name>
    <key>padding</key>
    <type>int</type>
  </param>
  <param>
    <name>Bitrate</name>
    <key>bps</key>
    <type>real</type>
  </param>
  <!-- Make one 'sink' node per input. Sub-nodes:
       * name (an identifier for the GUI)
       * type
       * vlen
       * optional (set to 1 for optional inputs) -->
  <sink>
    <name>payload_in</name>
    <type>message</type>
    <optional>1</optional>
  </sink>

  <!-- Make one 'source' node per output. Sub-nodes:
       * name (an identifier for the GUI)
       * type
       * vlen
       * optional (set to 1 for optional inputs) -->
  <source>
    <name>frame_out</name>
    <type>message</type>
    <optional>1</optional>
  </source>
</block>
