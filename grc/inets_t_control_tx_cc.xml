<?xml version="1.0"?>
<block>
  <name>t_control_tx_cc</name>
  <key>inets_t_control_tx_cc</key>
  <category>inets_dmf_phy</category>
  <import>import inets</import>
  <make>inets.t_control_tx_cc($develop_mode, $block_id, $bps, $t_pretx_interval_s, $record_on)</make>
  <!-- Make one 'param' node for every Parameter you want settable from the GUI.
       Sub-nodes:
       * name
       * key (makes the value accessible as $keyname, e.g. in the make node)
       * type -->

  <param>
    <name>Develop mode</name>
    <key>develop_mode</key>
    <value>develop_mode</value>
    <type>int</type>
    <option>
      <name>on</name>
      <key>1</key>
    </option>
    <option>
      <name>off</name>
      <key>0</key>
    </option>
    <option>
      <name>time</name>
      <key>2</key>
    </option>
  </param>
  <param>
    <name>Block id</name>
    <key>block_id</key>
    <value>4</value>
    <type>int</type>
  </param>
  <param>
    <name>bitrate</name>
    <key>bps</key>
    <value>constellation.bits_per_symbol() * (samp_rate / sps)</value>
    <type>float</type>
  </param>
  <param>
    <name>Pre-tx interval</name>
    <key>t_pretx_interval_s</key>
    <value>t_pretx_interval_s</value>
    <type>float</type>
  </param>
  <param>
    <name>Record on</name>
    <key>record_on</key>
    <type>enum</type>
    <option>
      <name>No</name>
      <key>0</key>
    </option>
    <option>
      <name>Yes</name>
      <key>1</key>
    </option>
  </param>
  <!-- Make one 'sink' node per input. Sub-nodes:
       * name (an identifier for the GUI)
       * type
       * vlen
       * optional (set to 1 for optional inputs) -->
  <sink>
    <name>in</name>
    <type>complex</type>
  </sink>

  <!-- Make one 'source' node per output. Sub-nodes:
       * name (an identifier for the GUI)
       * type
       * vlen
       * optional (set to 1 for optional inputs) -->
  <source>
    <name>out</name>
    <type>complex</type>
  </source>
</block>
