<?xml version="1.0"?>
<block>
  <name>frame_info_selector</name>
  <key>inets_frame_info_selector</key>
  <category>inets_dmf_v1.0</category>
  <import>import inets</import>
  <make>inets.frame_info_selector()</make>
  <!-- Make one 'param' node for every Parameter you want settable from the GUI.
       Sub-nodes:
       * name
       * key (makes the value accessible as $keyname, e.g. in the make node)
       * type -->

  <!-- Make one 'sink' node per input. Sub-nodes:
       * name (an identifier for the GUI)
       * type
       * vlen
       * optional (set to 1 for optional inputs) -->
  <sink>
    <name>frame_info_in</name>
    <type>message</type>
  </sink>

  <!-- Make one 'source' node per output. Sub-nodes:
       * name (an identifier for the GUI)
       * type
       * vlen
       * optional (set to 1 for optional inputs) -->
  <source>
    <name>data_frame_info_out</name>
    <type>message</type>
    <optional>1</optional>
  </source>
  <source>
    <name>ack_frame_info_out</name>
    <type>message</type>
    <optional>1</optional>
  </source>
</block>
