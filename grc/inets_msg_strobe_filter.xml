<?xml version="1.0"?>
<block>
  <name>msg_strobe_filter</name>
  <key>inets_msg_strobe_filter</key>
  <category>inets_dmf_mac</category>
  <import>import inets</import>
  <make>inets.msg_strobe_filter($start_next_time_s, $system_time_granularity_us)</make>

  <param>
    <name>Start in next multiple of [s]</name>
    <key>start_next_time_s</key>
    <value>5</value>
    <type>int</type>
    <hide>part</hide>
  </param>
  <param>
    <name>System time granularity [us]</name>
    <key>system_time_granularity_us</key>
    <value>10</value>
    <type>int</type>
    <hide>part</hide>
  </param>
  <!-- Make one 'param' node for every Parameter you want settable from the GUI.
       Sub-nodes:
       * name
       * key (makes the value accessible as $keyname, e.g. in the make node)
       * type -->

  <!-- Make one 'sink' node per input. Sub-nodes:
       * name (an identifier for the GUI)
       * type
       * vlen
       * optional (set to 1 for optional inputs) -->
  <sink>
    <name>msg_in</name>
    <type>message</type>
  </sink>

  <!-- Make one 'source' node per output. Sub-nodes:
       * name (an identifier for the GUI)
       * type
       * vlen
       * optional (set to 1 for optional inputs) -->
  <source>
    <name>start_out</name>
    <type>message</type>
  </source>
</block>
