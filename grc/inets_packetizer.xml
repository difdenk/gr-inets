<block>
  <name>Packetizer</name>
  <key>inets_packetizer</key>
  <category>iNets</category>
  <import>import inets</import>
  <make>inets.packetizer($develop_mode, $block_id, $preamble, $padding, $bps)</make>
  <param>
    <name>Develop mode</name>
    <key>develop_mode</key>
    <value>develop_mode</value>
    <type>int</type>
    <option>
      <name>on</name>
      <key>1</key>
    </option>
    <option>
      <name>off</name>
      <key>0</key>
    </option>
  </param>
  <param>
    <name>Block id</name>
    <key>block_id</key>
    <value>3</value>
    <type>int</type>
  </param>
  <param>
    <name>Preamble</name>
    <key>preamble</key>
    <value>preamble</value>
    <type>int_vector</type>
  </param>
  <param>
    <name>Padding</name>
    <key>padding</key>
    <type>int</type>
  </param>
  <param>
    <name>Bitrate</name>
    <key>bps</key>
    <type>real</type>
  </param>
  <sink>
    <name>payload_in</name>
    <type>message</type>
    <optional>1</optional>
  </sink>
  <source>
    <name>packet_out</name>
    <type>message</type>
    <optional>1</optional>
  </source>
</block>
