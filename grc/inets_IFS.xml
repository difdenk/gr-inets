<?xml version="1.0"?>
<block>
  <name>IFS</name>
  <key>inets_IFS</key>
  <category>inets_dmf_mac</category>
  <import>import inets</import>
  <make>inets.IFS($develop_mode, $block_id, $SIFS, $slot_time, $interval_type, $customized_IFS, $AIFS_ac, $cs_threshold, $system_time_granularity_us)</make>
  <!-- Make one 'param' node for every Parameter you want settable from the GUI.
       Sub-nodes:
       * name
       * key (makes the value accessible as $keyname, e.g. in the make node)
       * type -->

  <param>
    <name>Develop mode</name>
    <key>develop_mode</key>
    <type>enum</type>
    <hide>$develop_mode.hide</hide>
    <option>
      <name>off</name>
      <key>0</key>
      <opt>hide:part</opt>
      <opt>hide_control:all</opt>
    </option>
    <option>
      <name>on</name>
      <key>1</key>
      <opt>hide:none</opt>
      <opt>hide_control:none</opt>
    </option>
    <option>
      <name>time</name>
      <key>2</key>
      <opt>hide:none</opt>
      <opt>hide_control:none</opt>
    </option>
  </param>

  <param>
    <name>Block id</name>
    <key>block_id</key>
    <value>19</value>
    <type>int</type>
    <hide>$develop_mode.hide_control</hide>
  </param>

  <param>
    <name>IFS type</name>
    <key>interval_type</key>
    <type>enum</type>
    <hide>part</hide>
    <option>
      <name>SIFS</name>
      <key>1</key>
      <opt>hide:all</opt>
      <opt>hide_customize:all</opt>
    </option>
    <option>
      <name>PIFS</name>
      <key>2</key>
      <opt>hide:all</opt>
      <opt>hide_customize:all</opt>
    </option>
    <option>
      <name>DIFS</name>
      <key>3</key>
      <opt>hide:all</opt>
      <opt>hide_customize:all</opt>
    </option>
    <option>
      <name>AIFS</name>
      <key>4</key>
      <opt>hide:AIFS</opt>
      <opt>hide_customize:all</opt>
    </option>
    <option>
      <name>RIFS</name>
      <key>5</key>
      <opt>hide:all</opt>
      <opt>hide_customize:all</opt>
    </option>
    <option>
      <name>EIFS</name>
      <key>6</key>
      <opt>hide:all</opt>
      <opt>hide_customize:all</opt>
    </option>
    <option>
      <name>Customized IFS</name>
      <key>0</key>
      <opt>hide:all</opt>
      <opt>hide_customize:part</opt>
    </option>
  </param>

  <param>
    <name>Customized IFS</name>
    <key>customized_IFS</key>
    <value>0</value>
    <type>int</type>
    <hide>$interval_type.hide_customize</hide>
  </param>

  <param>
    <name>AIFS_ac</name>
    <key>AIFS_ac</key>
    <type>enum</type>
    <hide>$interval_type.hide</hide>
    <option>
      <name>AC_BK</name>
      <key>1</key>
    </option>
    <option>
      <name>AC_BE</name>
      <key>2</key>
    </option>
    <option>
      <name>AC_VI</name>
      <key>3</key>
    </option>
    <option>
      <name>AC_VO</name>
      <key>4</key>
    </option>
  </param>

  <param>
    <name>Default CCA settings</name>
    <key>default_cs_setting</key>
    <type>enum</type>
    <hide>part</hide>
    <option>
      <name>Default</name>
      <key>default</key>
      <opt>hide:all</opt>
    </option>
    <option>
      <name>Customized</name>
      <key>customized</key>
      <opt>hide:part</opt>
    </option>
  </param>

  <param>
    <name>SIFS [us]</name>
    <key>SIFS</key>
    <value>10000</value>
    <type>int</type>
    <hide>$default_cs_setting.hide</hide>
  </param>

  <param>
    <name>Slot time [us]</name>
    <key>slot_time</key>
    <value>8000</value>
    <type>int</type>
    <hide>$default_cs_setting.hide</hide>
  </param>

  <param>
    <name>CS threshold</name>
    <key>cs_threshold</key>
    <value>cs_threshold</value>
    <type>float</type>
    <hide>$default_cs_setting.hide</hide>
  </param>

  <param>
    <name>System time granularity [us]</name>
    <key>system_time_granularity_us</key>
    <value>system_time_granularity_us</value>
    <type>int</type>
    <hide>$default_cs_setting.hide</hide>
  </param>

  <!-- Make one 'source' node per output. Sub-nodes:
       * name (an identifier for the GUI)
       * type
       * vlen
       * optional (set to 1 for optional inputs) -->

  <sink>
    <name>info_in</name>
    <type>message</type>
    <optional>1</optional>
  </sink>
  <source>
    <name>frame_info_pass_out</name>
    <type>message</type>
    <optional>1</optional>
  </source>

  <source>
    <name>frame_info_fail_out</name>
    <type>message</type>
    <optional>1</optional>
  </source>

</block>
