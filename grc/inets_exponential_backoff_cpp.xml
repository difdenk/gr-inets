<?xml version="1.0"?>
<block>
  <name>exponential_backoff_cpp</name>
  <key>inets_exponential_backoff_cpp</key>
  <category>inets_dmf_v1.0</category>
  <import>import inets</import>
  <make>inets.exponential_backoff_cpp($backoff_time_unit, $max_n_backoff, $min_backoff)</make>
  <!-- Make one 'param' node for every Parameter you want settable from the GUI.
       Sub-nodes:
       * name
       * key (makes the value accessible as $keyname, e.g. in the make node)
       * type -->
  <param>
    <name>Backoff time unit [ms]</name>
    <key>backoff_time_unit</key>
    <type>int</type>
  </param>
  <param>
    <name>Max. number of backoff</name>
    <key>max_n_backoff</key>
    <type>int</type>
  </param>
  <param>
    <name>Min. backoff time [ms]</name>
    <key>min_backoff</key>
    <type>int</type>
  </param>
  <!-- Make one 'sink' node per input. Sub-nodes:
       * name (an identifier for the GUI)
       * type
       * vlen
       * optional (set to 1 for optional inputs) -->
  <sink>
    <name>spark_in</name>
    <type>message</type>
  </sink>

  <!-- Make one 'source' node per output. Sub-nodes:
       * name (an identifier for the GUI)
       * type
       * vlen
       * optional (set to 1 for optional inputs) -->
  <source>
    <name>spark_out</name>
    <type>message</type>
  </source>
</block>
