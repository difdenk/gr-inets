<?xml version="1.0"?>
<block>
  <name>tx_buffer</name>
  <key>inets_tx_buffer</key>
  <category>inets_dmf_v1.0</category>
  <import>import inets</import>
  <make>inets.tx_buffer($develop_mode_list, $max_buffer_size, $policy)</make>
  <!-- Make one 'param' node for every Parameter you want settable from the GUI.
       Sub-nodes:
       * name
       * key (makes the value accessible as $keyname, e.g. in the make node)
       * type -->
  <param>
    <name>Develop mode list</name>
    <key>develop_mode_list</key>
    <value>develop_mode_list</value>
    <type>int_vector</type>
  </param>
  <param>
    <name>Max buffer size</name>
    <key>max_buffer_size</key>
    <value>max_buffer_size</value>
    <type>int</type>
  </param>

  <param>
    <name>Policy</name>
    <key>policy</key>
    <value>1</value>
    <type>int</type>
  </param>
  <!-- Make one 'sink' node per input. Sub-nodes:
       * name (an identifier for the GUI)
       * type
       * vlen
       * optional (set to 1 for optional inputs) -->
  <sink>
    <name>payload_in</name>
    <type>message</type>
  </sink>

  <sink>
    <name>spark_in</name>
    <type>message</type>
  </sink>
  <!-- Make one 'source' node per output. Sub-nodes:
       * name (an identifier for the GUI)
       * type
       * vlen
       * optional (set to 1 for optional inputs) -->
  <source>
    <name>payload_out</name>
    <type>message</type>
  </source>
</block>
