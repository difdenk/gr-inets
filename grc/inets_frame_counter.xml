<?xml version="1.0"?>
<block>
  <name>frame_counter</name>
  <key>inets_frame_counter</key>
  <category>inets_dmf_tool</category>
  <import>import inets</import>
  <make>inets.frame_counter($develop_mode, $block_id, $counts)</make>
  <!-- Make one 'param' node for every Parameter you want settable from the GUI.
       Sub-nodes:
       * name
       * key (makes the value accessible as $keyname, e.g. in the make node)
       * type -->

  <param>
    <name>Develop mode</name>
    <key>develop_mode</key>
    <type>enum</type>
    <hide>$develop_mode.hide</hide>
    <option>
      <name>off</name>
      <key>0</key>
      <opt>hide:part</opt>
      <opt>hide_control:all</opt>
    </option>
    <option>
      <name>on</name>
      <key>1</key>
      <opt>hide:none</opt>
      <opt>hide_control:none</opt>
    </option>
    <option>
      <name>time</name>
      <key>2</key>
      <opt>hide:none</opt>
      <opt>hide_control:none</opt>
    </option>
  </param>

  <param>
    <name>Block id</name>
    <key>block_id</key>
    <value>36</value>
    <type>int</type>
    <hide>$develop_mode.hide_control</hide>
  </param>

  <param>
    <name>Number of counts</name>
    <key>counts</key>
    <value>4</value>
    <type>int</type>
    <hide>part</hide>
  </param>

  <param>
    <name>Show reset port</name>
    <key>reset</key>
    <type>enum</type>
    <hide>part</hide>
    <option>
      <name>No</name>
      <key>1</key>
    </option>
    <option>
      <name>Yes</name>
      <key>0</key>
    </option>
  </param>

  <param>
    <name>Show set no. counts port</name>
    <key>set</key>
    <type>enum</type>
    <hide>part</hide>
    <option>
      <name>No</name>
      <key>1</key>
    </option>
    <option>
      <name>Yes</name>
      <key>0</key>
    </option>
  </param>

  <param>
    <name>Show unselected frame</name>
    <key>unselect</key>
    <type>enum</type>
    <hide>part</hide>
    <option>
      <name>No</name>
      <key>1</key>
    </option>
    <option>
      <name>Yes</name>
      <key>0</key>
    </option>
  </param>
  <!-- Make one 'sink' node per input. Sub-nodes:
       * name (an identifier for the GUI)
       * type
       * vlen
       * optional (set to 1 for optional inputs) -->
  <sink>
    <name>counts_in</name>
    <type>message</type>
    <optional>1</optional>
  </sink>

  <sink>
    <name>reset_in</name>
    <type>message</type>
    <optional>1</optional>
    <hide>$reset</hide>
  </sink>

  <sink>
    <name>set_n_counts_in</name>
    <type>message</type>
    <optional>1</optional>
    <hide>$set</hide>
  </sink>

  <!-- Make one 'source' node per output. Sub-nodes:
       * name (an identifier for the GUI)
       * type
       * vlen
       * optional (set to 1 for optional inputs) -->
  <source>
    <name>select_out</name>
    <type>message</type>
    <optional>1</optional>
  </source>

  <source>
    <name>unselect_out</name>
    <type>message</type>
    <optional>1</optional>
    <hide>$unselect</hide>
  </source>
</block>
