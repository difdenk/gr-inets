<?xml version="1.0"?>
<block>
  <name>carrier_sensing</name>
  <key>inets_carrier_sensing</key>
  <category>inets_dmf_mac</category>
  <import>import inets</import>
  <make>inets.carrier_sensing($develop_mode, $block_id, $cs_mode, $cs_duration, $cs_threshold, $system_time_granularity_us)</make>
  <!-- Make one 'param' node for every Parameter you want settable from the GUI.
       Sub-nodes:
       * name
       * key (makes the value accessible as $keyname, e.g. in the make node)
       * type -->
  <param>
    <name>Develop mode</name>
    <key>develop_mode</key>
    <value>develop_mode</value>
    <type>enum</type>
    <hide>$develop_mode.hide</hide>
    <option>
      <name>off</name>
      <key>0</key>
      <opt>hide:part</opt>
      <opt>hide_control:all</opt>
    </option>
    <option>
      <name>on</name>
      <key>1</key>
      <opt>hide:none</opt>
      <opt>hide_control:none</opt>
    </option>
    <option>
      <name>time</name>
      <key>2</key>
      <opt>hide:none</opt>
      <opt>hide_control:none</opt>
    </option>
  </param>
  <param>
    <name>Block id</name>
    <key>block_id</key>
    <value>11</value>
    <type>int</type>
    <hide>$develop_mode.hide_control</hide>
  </param>
  <param>
    <name>Mode</name>
    <key>cs_mode</key>
    <type>enum</type>
    <option>
      <name>Oneshot</name>
      <key>1</key>
      <opt>hide_oneshot:part</opt>
      <opt>hide_fix:all</opt>
      <opt>hide_until:all</opt>
    </option>
    <option>
      <name>Fix duration</name>
      <key>2</key>
      <opt>hide_oneshot:all</opt>
      <opt>hide_fix:part</opt>
      <opt>hide_until:all</opt>
    </option>
    <option>
      <name>Until channel free</name>
      <key>3</key>
      <opt>hide_oneshot:all</opt>
      <opt>hide_fix:all</opt>
      <opt>hide_until:part</opt>
    </option>
  </param>
  <param>
    <name>Threshold (ED)</name>
    <key>cs_threshold</key>
    <value>0.005</value>
    <type>float</type>
    <hide>part</hide>
  </param>
  <param>
    <name>Duration</name>
    <key>cs_duration</key>
    <value>100</value>
    <type>real</type>
    <hide>$cs_mode.hide_fix</hide>
  </param>
  <param>
    <name>System time granularity [us]</name>
    <key>system_time_granularity_us</key>
    <value>1000</value>
    <type>int</type>
    <hide>part</hide>
  </param>

  <!-- Make one 'sink' node per input. Sub-nodes:
       * name (an identifier for the GUI)
       * type
       * vlen
       * optional (set to 1 for optional inputs) -->
  <sink>
    <name>info_in</name>
    <type>message</type>
    <optional>1</optional>
  </sink>

  <!-- Make one 'source' node per output. Sub-nodes:
       * name (an identifier for the GUI)
       * type
       * vlen
       * optional (set to 1 for optional inputs) -->
  <source>
    <name>frame_info_pass_out</name>
    <type>message</type>
    <optional>1</optional>
  </source>
  <source>
    <name>frame_info_fail_out</name>
    <type>message</type>
    <optional>1</optional>
  </source>
</block>
