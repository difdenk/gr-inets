<?xml version="1.0"?>
<block>
  <name>time_probe</name>
  <key>inets_time_probe</key>
  <category>inets_dmf_tool</category>
  <import>import inets</import>
  <make>inets.time_probe($develop_mode, $block_id)</make>
  <!-- Make one 'param' node for every Parameter you want settable from the GUI.
       Sub-nodes:
       * name
       * key (makes the value accessible as $keyname, e.g. in the make node)
       * type -->
  <param>
    <name>Develop mode</name>
    <key>develop_mode</key>
    <type>enum</type>
    <hide>$develop_mode.hide</hide>
    <option>
      <name>off</name>
      <key>0</key>
      <opt>hide:part</opt>
      <opt>hide_control:all</opt>
      <opt>hide_pmt:all</opt>
    </option>
    <option>
      <name>on</name>
      <key>1</key>
      <opt>hide:none</opt>
      <opt>hide_control:none</opt>
      <opt>hide_pmt:part</opt>
    </option>
    <option>
      <name>time</name>
      <key>2</key>
      <opt>hide:none</opt>
      <opt>hide_control:none</opt>
      <opt>hide_pmt:part</opt>
    </option>
  </param>

  <param>
    <name>Block id</name>
    <key>block_id</key>
    <value>200</value>
    <type>int</type>
    <hide>$develop_mode.hide_control</hide>
  </param>

  <!-- Make one 'sink' node per input. Sub-nodes:
       * name (an identifier for the GUI)
       * type
       * vlen
       * optional (set to 1 for optional inputs) -->
  <sink>
    <name>time_former_in</name>
    <type>message</type>
    <optional>1</optional>
  </sink>

  <sink>
    <name>time_later_in</name>
    <type>message</type>
    <optional>1</optional>
  </sink>

  <!-- Make one 'source' node per output. Sub-nodes:
       * name (an identifier for the GUI)
       * type
       * vlen
       * optional (set to 1 for optional inputs) -->
</block>
