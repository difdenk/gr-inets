<?xml version="1.0"?>
<block>
  <name>counter</name>
  <key>inets_counter</key>
  <category>inets_dmf_tool</category>
  <import>import inets</import>
  <make>inets.counter($develop_mode_list, $counter_id)</make>
  <!-- Make one 'param' node for every Parameter you want settable from the GUI.
       Sub-nodes:
       * name
       * key (makes the value accessible as $keyname, e.g. in the make node)
       * type -->
  <param>
    <name>Develop mode list</name>
    <key>develop_mode_list</key>
    <value>develop_mode_list</value>
    <type>int_vector</type>
  </param>
  <param>
    <name>Counter ID</name>
    <key>counter_id</key>
    <value>counter_id</value>
    <type>int</type>
  </param>

  <!-- Make one 'sink' node per input. Sub-nodes:
       * name (an identifier for the GUI)
       * type
       * vlen
       * optional (set to 1 for optional inputs) -->
  <sink>
    <name>message_in</name>
    <type>message</type>
  </sink>

  <!-- Make one 'source' node per output. Sub-nodes:
       * name (an identifier for the GUI)
       * type
       * vlen
       * optional (set to 1 for optional inputs) -->
</block>
