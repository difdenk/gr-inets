<?xml version="1.0"?>
<block>
  <name>framing_py_v1</name>
  <key>inets_framing_py_v1</key>
  <category>inets_dmf_v1.0</category>
  <import>import inets</import>
  <make>inets.framing_py_v1($fr_seq, $src_addr)</make>
  <!-- Make one 'param' node for every Parameter you want settable from the GUI.
       Sub-nodes:
       * name
       * key (makes the value accessible as $keyname, e.g. in the make node)
       * type -->
  <param>
    <name>Frame sequence number</name>
    <key>fr_seq</key>
    <type>int</type>
  </param>
  <param>
    <name>Source address</name>
    <key>src_addr</key>
    <type>int</type>
  </param>
  <!-- Make one 'sink' node per input. Sub-nodes:
       * name (an identifier for the GUI)
       * type
       * vlen
       * optional (set to 1 for optional inputs) -->
  <sink>
    <name>payload_in</name>
    <type>message</type>
  </sink>
  <!-- Make one 'source' node per output. Sub-nodes:
       * name (an identifier for the GUI)
       * type
       * vlen
       * optional (set to 1 for optional inputs) -->
  <source>
    <name>frame_out</name>
    <type>message</type>
  </source>
</block>
